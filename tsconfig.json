{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "downlevelIteration": true,
    "target": "ES2020",
    "module": "ES2020",
    "lib": [
      "es2019.array", // for .flat and .flatMap
    ],
    // "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "importHelpers": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@tko/*": ["packages/*/src/index.js"],
      "*": ["*"],
    },
    "outDir": "build/",
    // "traceResolution": true,
  },
  "include": ["**/*.ts", "**/*.js"],
  // "files": ["packages/*/src/index.js"],
  "exclude": ["karma.conf.js", "node_modules", "**/spec/*"],
}
